rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read memories to ensure the website functions
    match /memories/{memoryId} {
      allow read: if true;
      // Deny writes by default to protect your data.
      // To run 'manage-memories.cjs', you can temporarily change this to 'if true'
      // or use Firebase Authentication for a more secure setup.
      allow write: if false; 
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
